<div class="container">
    <div class="row">
        <div class="login-wrapper" style="width: 40%; margin: 30px auto;">
            <div class="card card-1">
                <form class="form-horizontal" role="form">
                    <h2 class="text-center">Пријава</h2>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">Е-пошта
                            <span style="color: #ff0000; font-weight: 300">*</span>
                        </label>
                        <div class="col-sm-9">
                            <input type="email" id="email" placeholder="Унесите вашу електронску пошту" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-3 control-label">Шифра
                            <span style="color: #ff0000; font-weight: 300">*</span>
                        </label>
                        <div class="col-sm-9">
                            <input type="password" id="password" placeholder="Унесите вашу шифру" class="form-control" required>
                        </div>
                    </div>
                    <!-- /.form-group -->
                    <div class="form-group text-center" style="margin: 40px 0;">
                        <button type="button" id="login" class="btn btn-primary btn-lg">Пријави се</button>
                    </div>
                    <hr>
                    <div style="float: right; font-size: 16px;">
                       Немате еПрофил ? Региструјте се 
                        <a href="/registracija" style="color: blue;">овде</a>.
                    </div>
                </form>
                <!-- /form -->
            </div>
        </div>
    </div>
</div>
<!-- ./container -->